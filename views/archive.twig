{% extends "main.twig" %}
{% block content %}

<div class="content-wrapper">
	{% if function('is_category') %}
		{% do action('maera-child/category-post-panels') %}
	{% else %}
		{% for post in posts %}
			{% include ['content-'~post.ID~'.twig', 'content-'~post.post_type~'.twig', 'content.twig'] %}
			{{ function( 'wp_link_pages', { 'before': '<div class="page-links" itemprop="pagination">' . __( 'Pages:', 'maera' ), 'after': '</div>' }) }}
			<div class="clearfix"></div>
		{% endfor %}
	{% endif %}
</div>

{% endblock %}
