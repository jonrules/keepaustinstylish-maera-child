{#<?php#}
{% import 'grid_classes.html.twig' as grid %}

{% do action( 'maera/footer/before', post.ID ) %}
{% if sidebar.pre_footer %}<div class="row">{{ sidebar.pre_footer }}</div>{% endif %}
<footer class="page-footer">
	{% do action( 'maera/footer/start', post.ID ) %}
	<div class="{{ grid.container() }} wrap footer-section" id="wrap-footer-section">
		{% if sidebar.main_footer %}<div class="row">{{ sidebar.main_footer }}</div>{% endif %}
		{% do action( 'maera/footer/content' ) %}

		<div class="{{ grid.container() }}" id="footer-copyright">
			<div class="{{ grid.row() }}">
				{{ theme.theme_mod('footer_text', '')|replace({'[year]': now|date('Y') ,'[sitename]': bloginfo('name') }) }}
				<div class="clearfix"></div>
			</div>
		</div>

	</div>
	{% do action( 'maera/footer/end', post.ID ) %}
</footer>
{% do action( 'maera/footer/after', post.ID ) %}
{% if sidebar.post_footer %}<div class="row">{{ sidebar.post_footer }}</div>{% endif %}
{{ function( 'wp_footer' ) }}

</body>
</html>
